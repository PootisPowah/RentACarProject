@model CarModel

@{
    ViewBag.Title = "Create";
}

<h2>Create Car</h2>
<hr />
<div class="row">
    <div class="col-md-4">
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Brand" class="control-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
        <span class="text-danger" id="year-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="Horsepower" class="control-label"></label>
        <input asp-for="Horsepower" class="form-control" />
        <span asp-validation-for="Horsepower" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>
            <input asp-for="IsAvailable" type="checkbox" />
            <span>Is Available</span>
        </label>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mb-3" />
    </div>
</form>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        // Custom validation for year range
        var yearInput = document.getElementById("Year");
        var yearValidation = document.getElementById("year-validation");
        yearInput.addEventListener("change", function () {
            var year = parseInt(yearInput.value);
            if (year < 2000 || year > 2024) {
                yearValidation.textContent = "Year must be between 2000 and 2024.";
            } else {
                yearValidation.textContent = "";
            }
        });
    </script>
}
